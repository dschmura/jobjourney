%h1 Listing cards

%table
  %thead
    %tr
      %th List
      %th Name
      %th Position
      %th
      %th
      %th

  %tbody
    - @cards.each do |card|
      %tr
        %td= card.list
        %td= card.name
        %td= card.position
        %td= link_to 'Show', card
        %td= link_to 'Edit', edit_card_path(card)
        %td= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Card', new_card_path
